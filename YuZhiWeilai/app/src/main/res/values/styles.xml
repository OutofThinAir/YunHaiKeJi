<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>

    <style name="activity_main_rb_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/x22</item>
        <item name="android:layout_marginTop">10sp</item>

    </style>

    <style name="stu_pager_lv_item03_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/x30</item>
        <item name="android:textColor">#2f2f2f</item>
        <item name="android:layout_below">@id/stu_pil03_iamge</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">@dimen/x25</item>
    </style>

    <style name="stu_pager_lv_item03_info_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#bfbfbf</item>
        <item name="android:layout_below">@id/stu_pil03_title</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="my_pager_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#323232</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="pop_text_styel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/popup_text_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>


    <style name="TabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58.7dp</item>
        <item name="android:background">#ffd300</item>

    </style>

    <style name="particulars_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#323232</item>
        <item name="android:textSize">21.1sp</item>
        <item name="android:layout_marginTop">@dimen/y21</item>
        <item name="android:layout_marginLeft">@dimen/x33</item>
    </style>

    <style name="particulars_info_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#898989</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/y21</item>
        <item name="android:layout_marginLeft">@dimen/x33</item>
    </style>

</resources>
