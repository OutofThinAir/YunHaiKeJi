<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x101"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/login_pager_return"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/last_ic" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="登录"
            android:textColor="#121212"
            android:textSize="@dimen/x40" />
    </LinearLayout>

    <include layout="@layout/style_null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x224"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_pager_img"
            android:layout_width="@dimen/x166"
            android:layout_height="@dimen/x166"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x33"
            android:src="@mipmap/logo" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33.3dp"
        android:layout_marginRight="33.3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13.3dp"
            android:text="手机号码"
            android:textColor="#121212"
            android:textSize="@dimen/x44" />

        <EditText
            android:id="@+id/login_pager_phonen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:hint="+86"
            android:paddingBottom="13.3dp"
            android:textColor="#cacaca"
            android:textSize="@dimen/x33"

            />

    </LinearLayout>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33.3dp"
        android:layout_marginRight="33.3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13.3dp"
            android:text="密码"
            android:textColor="#121212"
            android:textSize="@dimen/x44" />

        <EditText
            android:id="@+id/login_pager_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_weight="1"
            android:hint="密码不少于6个字"
            android:inputType="textPassword"
            android:paddingLeft="4dp"
            android:textColor="#cacaca"
            android:textSize="15sp"

            />


        <ImageView
            android:id="@+id/login_pager_noShowPwd"
            android:layout_width="26.7dp"
            android:layout_height="@dimen/x58"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="13.3dp"
            android:src="@drawable/regin_pwd_show" />

    </LinearLayout>

    <TextView
        android:id="@+id/login_pager_forgetPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="33.3dp"
        android:text="忘记密码"
        />


    <Button
        android:id="@+id/login_pager_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x123"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="33.3dp"
        android:layout_marginRight="33.3dp"
        android:layout_marginTop="@dimen/x57"
        android:background="@mipmap/login_entry" />


    <Button
        android:id="@+id/login_paget_pregin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x123"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="33.3dp"
        android:layout_marginRight="33.3dp"
        android:layout_marginTop="@dimen/x57"
        android:background="@mipmap/login_register" />



     <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/x148"
    android:text="用社交账号登录"
    android:textColor="#b3b3b3"
    android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x105"
        android:layout_marginLeft="33.3dp"
        android:layout_marginRight="33.3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_pager_weChat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/regin_agree"
            android:drawableTop="@mipmap/login_wechat"
            android:paddingTop="6.7dp"
            android:text="微信登录"
            android:textColor="#b3b3b3"
            android:gravity="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/login_pager_QQ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/regin_agree"
            android:drawableTop="@mipmap/login_qq"
            android:paddingTop="6.7dp"
            android:text="QQ登录"
            android:gravity="center"
            android:textColor="#b3b3b3"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>